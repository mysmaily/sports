#nx-header
  %a{:href => root_path}
    .nx-logo
  .nx-header-middle
    .nx-headline
      .joomla_sharethis
        %p Follow Us On:
        %span.st_facebook{:st_processed => "yes"}
          %span.stButton{:style => "text-decoration: none; color: rgb(0, 0, 0); display: inline-block; cursor: pointer; padding-left: 0px; padding-right: 0px; width: 16px;"}
            %span.chicklets.facebook  
        %span.st_email{:st_processed => "yes"}
          %span.stButton{:style => "text-decoration: none; color: rgb(0, 0, 0); display: inline-block; cursor: pointer; padding-left: 0px; padding-right: 0px; width: 16px;"}
            %span.chicklets.email  
    .nx-search
      %form{:action => "/vmdemo/bakerymart/index.php/online-shop/search", :method => "get"}
        .search
          %input#product_suggest.ac_input{:autocomplete => "off", "data-max-item" => "5", "data-min-chars" => "3", "data-scroll" => "false", "data-scroll-height" => "400", :name => "keyword", :placeholder => "Search BakeryMart", :type => "text"}/
          %input#sub-search{:onclick => "this.form.keyword.focus();", :type => "submit", :value => "Search"}/
  .nx-user-top
    .nx-user-menu
      %ul.menu
        - if user_signed_in?
          %li.item-132
            = link_to current_user.email, edit_user_registration_path
          %li.item-133
            = link_to t('Logout'), destroy_user_session_path, method: :delete
        - else
          %li.item-132
            = link_to t('login'), user_session_path
          %li.item-133
            = link_to t('register'), new_user_registration_path
    .nx-cart
      .cart
        %a{:name => "cart"}
        #vmCartModule.vmCartModule
