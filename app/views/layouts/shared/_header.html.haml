              .wrapper.marg-bot
                .image
                .fleft
                  .product_row
                    %span.product_name
                    .clear
                    %span.quantity
                    .prices{:style => "display:inline;"}
                    %a.vmicon.vmicon.vm2-remove_from_cart{:onclick => "remove_product_cart(this);"}
                      %span.product_cart_id{:style => "display:none;"}
                  .product_attributes
              .wrapper2
